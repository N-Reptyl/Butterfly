{
  "name": "butterfly-site",
  "version": "1.0.0",
  "scripts": {
    "clean": "rimraf _dist",
    "dev": "npm-run-all --parallel dev:*",
    "dev:css": "tailwindcss -i ./src/styles/tailwind.css -o ./dist/assets/styles.css --watch",
    "dev:11ty": "eleventy --serve --quiet",
    "build": "npm run clean && eleventy && tailwindcss -i ./src/styles/tailwind.css -o ./dist/assets/styles.css --minify"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "autoprefixer": "^10.4.21",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.17"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.11",
    "sharp": "^0.34.3"
  }
}
