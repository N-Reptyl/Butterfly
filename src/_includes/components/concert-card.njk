<a href="{{ c.data.cta.url or c.url }}" class="group relative block h-[360px] md:h-[430px] overflow-hidden">
  <!-- Image -->
  <img src="{{ c.data.cover }}" alt="Affiche – {{ c.data.title }}"
       class="absolute inset-0 w-full h-full object-cover scale-100 group-hover:scale-[1.03] transition-transform duration-500" />
  <!-- Voile sombre -->
  <div class="absolute inset-0 bg-black/65 group-hover:bg-black/35 transition-colors"></div>

  <!-- Genre -->
  {% if c.data.genre %}
  <span class="absolute left-4 top-4 bg-white/15 backdrop-blur px-3 py-1 rounded text-sm">
    {{ c.data.genre }}
  </span>
  {% endif %}

  <!-- Contenu central -->
  <div class="absolute inset-0 flex flex-col items-start justify-center px-6">
    <h3 class="text-2xl md:text-3xl font-extrabold drop-shadow leading-tight">
      {{ c.data.title | safe }}
    </h3>

    {% if c.data.subtitle %}
      <div class="h-1 w-40 bg-[#2aa39a] my-3"></div>
      <p class="text-sm md:text-base text-white/90">
        {{ c.data.subtitle }}
      </p>
    {% endif %}

    <!-- Méta bas -->
    <div class="absolute left-6 bottom-20 text-sm bg-black/35 px-3 py-1">
      {% if c.data.city %}{{ c.data.city }}{% endif %}
      {% if c.data.date %} · {{ c.data.date | dateFR({ day:"2-digit", month:"long", year:"numeric" }) }}{% endif %}
    </div>

    <!-- CTA -->
    <div class="bg-primary absolute left-6 bottom-6">
      <span class="inline-block bg-transparent text-white font-semibold px-6 py-2 border-2 border-white hover:bg-white/10 transition">
        {{ c.data.cta.label or "Découvrir" }}  >
      </span>
    </div>
  </div>
</a>
